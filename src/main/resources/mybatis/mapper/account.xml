    <insert id="insertaccount" parameterType="com.vo.AccountVO">
        <!--<selectKey keyProperty="accNo" resultType="java.lang.Long" order="BEFORE">-->
        <!--SELECT COALESCE(MAX(SORT_ORDR),0)+1 AS ACC_NO FROM SW_ACCOUNT-->
        <!--</selectKey>-->
        INSERT INTO SW_ACCOUNT(
        ACC_DATE, CATEGORY, CONTENT, AMOUNT)
        VALUES (#{accDate}, #{category}, #{content}, #{amount})
    </insert>

    <update id="updateAccount" parameterType="com.vo.AccountVO">
        UPDATE sw_account
        SET  ACC_DATE = #{accDate}
        , CATEGORY = #{category}
        , CONTENT = #{content}
        , AMOUNT = #{amount}
        WHERE acc_no = #{accNo}
    </update>

    <select id="selectAccountByAccNo" resultMap="accountVO">
        SELECT ACC_DATE,
               CATEGORY,
               CONTENT,
               AMOUNT,
               ACC_NO,
               ACC_DELETE
        FROM SW_ACCOUNT
        WHERE ACC_NO = #{ACCNO}
    </select>

    <select id="deleteAccList" parameterType="com.vo.AccountVO">
        update sw_account
        set acc_delete = true
        where acc_no = #{accNo}
    </select>

</mapper>