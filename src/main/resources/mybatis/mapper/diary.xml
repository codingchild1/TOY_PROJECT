    <insert id="insertDiary" parameterType="com.vo.DiaryVO">
        INSERT INTO sw_diary(
        mber_id
	    , diary_date
	    , diary_title
	    , diary_contents
	    , diary_delete
	    , diary_secret
	    )
	    VALUES (#{mberId}
	    , #{diaryDate}
	    , #{diaryTitle}
	    , #{diaryContents}
	    , false
	    , #{secretBtn}
	    )
    </insert>

    <select id="selectDiaryByDiaryNo" resultMap="diaryDAO">
        SELECT MBER_ID,
               DIARY_DATE,
               DIARY_TITLE,
               DIARY_CONTENTS,
               DIARY_NO
        FROM SW_DIARY
        WHERE DIARY_NO = #{diaryNo}
    </select>

    <select id="mberIdList" resultMap="mberVO">
        SELECT MBER_ID
        FROM SW_MBER
        ORDER BY ESNTL_ID ASC;
    </select>

</mapper>